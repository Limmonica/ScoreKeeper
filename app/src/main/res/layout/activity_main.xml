<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.scorekeeper.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Background image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_description"
            android:scaleType="centerCrop"
            android:src="@drawable/basketball" />

        <LinearLayout
            android:id="@+id/teams_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.9"
                android:orientation="vertical">

                <!-- Team A Name -->
                <TextView
                    style="@style/TextTeamName"
                    android:text="@string/team_A_name" />

                <!-- Team A Score -->
                <TextView
                    android:id="@+id/team_a_score"
                    style="@style/TextTeamScore"
                    android:text="@string/initial_Score" />

                <!-- Add 3 points for the Team A -->
                <Button
                    style="@style/ButtonStyle"
                    android:onClick="addThreeForTeamA"
                    android:text="@string/three_points" />

                <!-- Add 2 points for the Team A -->
                <Button
                    style="@style/ButtonStyle"
                    android:onClick="addTwoForTeamA"
                    android:text="@string/two_points" />

                <!-- Add 1 point for the Team A -->
                <Button
                    style="@style/ButtonStyle"
                    android:onClick="addOneForTeamA"
                    android:text="@string/one_point" />
            </LinearLayout>

            <!-- Middle line -->
            <View style="@style/LineStyle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.9"
                android:orientation="vertical">

                <!-- Team B Name -->
                <TextView
                    style="@style/TextTeamName"
                    android:text="@string/team_B_name" />

                <!-- Team B Score -->
                <TextView
                    android:id="@+id/team_b_score"
                    style="@style/TextTeamScore"
                    android:text="@string/initial_Score" />

                <!-- Add 3 points for the Team B -->
                <Button
                    style="@style/ButtonStyle"
                    android:onClick="addThreeForTeamB"
                    android:text="@string/three_points" />

                <!-- Add 2 points for the Team B -->
                <Button
                    style="@style/ButtonStyle"
                    android:onClick="addTwoForTeamB"
                    android:text="@string/two_points" />

                <!-- Add 1 point for the Team B -->
                <Button
                    style="@style/ButtonStyle"
                    android:onClick="addOneForTeamB"
                    android:text="@string/one_point" />
            </LinearLayout>
        </LinearLayout>

        <!-- Reset Button -->
        <Button
            style="@style/ButtonStyle"
            android:layout_below="@+id/teams_scores"
            android:onClick="resetScore"
            android:text="@string/reset_score" />

    </RelativeLayout>
</ScrollView>
