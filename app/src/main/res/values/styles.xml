<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#673ab7</item>
        <item name="colorPrimaryDark">#673ab7</item>
        <item name="colorAccent">#673ab7</item>
        <item name="android:textColor">#ffffff</item>
        <item name="colorButtonNormal">#673ab7</item>
    </style>

    <!-- Style of the TextViews displaying the Team Name -->
    <style name="TextTeamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_team_name</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_padding_team_name</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_team_name</item>
    </style>

    <!-- Style of the TextViews displaying the Team Score -->
    <style name="TextTeamScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_score</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_score</item>
        <item name="android:layout_marginLeft">@dimen/width_line</item>
        <item name="android:layout_marginRight">@dimen/width_line</item>
    </style>

    <!-- Style of the Buttons displaying the Points and Reset -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Style of the View displaying the line in the middle -->
    <style name="LineStyle">
        <item name="android:layout_width">@dimen/width_line</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_team_name</item>
        <item name="android:alpha">0.9</item>
    </style>
</resources>
