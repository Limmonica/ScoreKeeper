<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <!-- Style of the score board card view -->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/score_card_margin</item>
    </style>

    <!-- Style of the team name -->
    <style name="TeamNameStyle">
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/text_size_team_name</item>
    </style>

    <!-- Style of the score text view -->
    <style name="ScoreStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_score</item>
    </style>

    <!-- Style of the layout of the score layout -->
    <style name="ScoreLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style of the separating line between the teams -->
    <style name="SeparatorLineStyle">
        <item name="android:layout_width">@dimen/width_line</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- Style of the TextViews displaying the Teams Fouls -->
    <style name="FoulsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_button_points</item>
        <item name="android:layout_marginRight">@dimen/margin_button_points</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_fouls_score</item>
        <item name="android:text">@string/initial_Score</item>
    </style>

    <!-- Style of the Buttons displaying Teams Points and Reset -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_button_points</item>
        <item name="android:layout_marginLeft">@dimen/margin_button_points</item>
        <item name="android:layout_marginRight">@dimen/margin_button_points</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_button</item>
        <item name="android:layout_marginTop">@dimen/margin_bottom_button</item>
        <item name="android:textSize">@dimen/text_size_points</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>